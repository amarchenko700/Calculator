<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_backgroundcalc2"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/text_memory"
        style="@style/text_memory">
    </TextView>

    <TextView
        android:id="@+id/expression_string"
        style="@style/text_expression_string">
    </TextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_MC"
            style="@style/buttons_memory"
            android:text="@string/MC" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_MR"
            style="@style/buttons_memory"
            android:text="@string/MR" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_MAsc"
            style="@style/buttons_memory"
            android:text="@string/MAsc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_MDesc"
            style="@style/buttons_memory"
            android:text="@string/MDesc" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_CE"
            style="@style/buttons_function"
            android:text="@string/key_CE" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_C"
            style="@style/buttons_function"
            android:text="@string/key_C" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_delete"
            style="@style/buttons_function"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="@string/key_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_7"
            style="@style/buttons_numbers"
            android:text="@string/key_7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_8"
            style="@style/buttons_numbers"
            android:text="@string/key_8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_9"
            style="@style/buttons_numbers"
            android:text="@string/key_9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_multiplication"
            style="@style/buttons_function"
            android:text="@string/key_multiplication" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_4"
            style="@style/buttons_numbers"
            android:text="@string/key_4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_5"
            style="@style/buttons_numbers"
            android:text="@string/key_5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_6"
            style="@style/buttons_numbers"
            android:text="@string/key_6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_subtraction"
            style="@style/buttons_function"
            android:text="@string/key_subtraction" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_1"
            style="@style/buttons_numbers"
            android:text="@string/key_1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_2"
            style="@style/buttons_numbers"
            android:text="@string/key_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_3"
            style="@style/buttons_numbers"
            android:text="@string/key_3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_addition"
            style="@style/buttons_function"
            android:text="@string/key_addition" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_0"
            style="@style/buttons_numbers"
            android:text="@string/key_0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_dot"
            style="@style/buttons_numbers"
            android:text="@string/key_dot" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_equally"
            style="@style/buttons_function"
            android:text="@string/key_equally" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/key_division"
            style="@style/buttons_function"
            android:text="@string/key_division" />

    </GridLayout>

</LinearLayout>