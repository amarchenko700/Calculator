<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="calculator_buttons">
        <item name="android:layout_width">@dimen/calculator_buttons_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/calculator_buttons_layout_margin</item>
        <item name="cornerRadius">@dimen/calculator_buttons_corner_radius</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="number_buttons" parent="calculator_buttons">
        <item name="backgroundTint">@color/number_buttons</item>
    </style>

    <style name="memory_buttons" parent="calculator_buttons">
        <item name="backgroundTint">@color/memory_buttons</item>
    </style>

    <style name="function_buttons" parent="calculator_buttons">
        <item name="backgroundTint">@color/function_buttons</item>
    </style>

    <style name="text_memory_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_memory_textview_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_memory_textview</item>
        <item name="android:text">@string/text_memory_textview</item>
    </style>

    <style name="expression_string_textview" parent="text_memory_textview">
        <item name="android:textSize">@dimen/expression_string_textview_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/expression_string_textview</item>
    </style>
</resources>