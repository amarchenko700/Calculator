<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calcbackground"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_memory_textview"
            style="@style/text_memory_textview"/>
        <TextView
            android:id="@+id/expression_string_textview"
            style="@style/expression_string_textview"/>
        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_button_text">
        </Button>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memory_clear_button"
            style="@style/memory_buttons"
            android:text="@string/memory_clear_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memory_read_button"
            style="@style/memory_buttons"
            android:text="@string/memory_read_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memory_addition_button"
            style="@style/memory_buttons"
            android:text="@string/memory_addition_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/memory_subtraction_button"
            style="@style/memory_buttons"
            android:text="@string/memory_subtraction_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_entry_button"
            style="@style/function_buttons"
            android:text="@string/clear_entry_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_button"
            style="@style/function_buttons"
            android:text="@string/clear_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            style="@style/function_buttons"
            android:layout_gravity="fill_horizontal"
            android:text="@string/delete_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equally_button"
            style="@style/function_buttons"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="@string/equally_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot_button"
            style="@style/number_buttons"
            android:text="@string/dot_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiplication_button"
            style="@style/function_buttons"
            android:text="@string/multiplication_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/division_button"
            style="@style/function_buttons"
            android:text="@string/division_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_5_button"
            style="@style/number_buttons"
            android:text="@string/number_5_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_6_button"
            style="@style/number_buttons"
            android:text="@string/number_6_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_7_button"
            style="@style/number_buttons"
            android:text="@string/number_7_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_8_button"
            style="@style/number_buttons"
            android:text="@string/number_8_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_9_button"
            style="@style/number_buttons"
            android:text="@string/number_9_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addition_button"
            style="@style/function_buttons"
            android:text="@string/addition_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_0_button"
            style="@style/number_buttons"
            android:text="@string/number_0_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_1_button"
            style="@style/number_buttons"
            android:text="@string/number_1_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_2_button"
            style="@style/number_buttons"
            android:text="@string/number_2_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_3_button"
            style="@style/number_buttons"
            android:text="@string/number_3_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/number_4_button"
            style="@style/number_buttons"
            android:text="@string/number_4_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/subtraction_button"
            style="@style/function_buttons"
            android:text="@string/subtraction_button" />

    </GridLayout>

</LinearLayout>